<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">


    <!-- ImageView -->
    <ImageView
        android:id="@+id/illustratio"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="220dp"
        android:clipToOutline="true"
        android:src="@drawable/second_act"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- TextView -->
    <TextView
        android:id="@+id/some_id"
        android:layout_width="327dp"
        android:layout_height="96dp"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="Создайте профиль прямо сейчас\nИли ты можешь пропустить этот шаг"
        android:textColor="#26272C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/illustratio"
        app:layout_constraintStart_toStartOf="@id/illustratio"
        app:layout_constraintTop_toBottomOf="@id/illustratio"/>

    <!-- Первая кнопка (основная) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/big_primary"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/rounded_button"
        android:text="Создать профиль"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/some_id"
        app:layout_constraintStart_toStartOf="@id/some_id"
        app:layout_constraintTop_toBottomOf="@id/some_id"/>

    <!-- Вторая кнопка (Пропустить) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skip_button"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/skipping_button"
        android:text="Пропустить"
        android:textAllCaps="false"
        android:textColor="#3A6AE2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/big_primary"
        app:layout_constraintStart_toStartOf="@id/big_primary"
        app:layout_constraintTop_toBottomOf="@id/big_primary"/>

</androidx.constraintlayout.widget.ConstraintLayout>