<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Голубой хедер с закруглением снизу -->
    <RelativeLayout
        android:id="@+id/header_deta"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@drawable/rounded_header">

        <!-- Кнопка назад -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Назад"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <!-- Надпись "Вступительные уроки" -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="56dp"
            android:text="Вступительные уроки"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Первый блок -->
    <RelativeLayout
        android:id="@+id/text_text_p"
        android:layout_width="327dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded_gray_border"
        android:layout_below="@id/header_deta"
        android:layout_centerHorizontal="true">

        <!-- Иконка -->
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pencil_paper"/>

        <!-- Текст "Уровень А1" -->
        <TextView
            android:id="@+id/lesson_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon1"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Уровень A1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- Текст "Beginner" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lesson_title1"
            android:layout_alignLeft="@id/lesson_title1"
            android:text="Beginner"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#000000"/>
    </RelativeLayout>

    <!-- Второй блок -->
    <RelativeLayout
        android:id="@+id/text_text_i1"
        android:layout_width="327dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_gray_border"
        android:layout_below="@id/text_text_p"
        android:layout_centerHorizontal="true">

        <!-- Иконка -->
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pencil_paper"/>

        <!-- Текст "Уровень А2" -->
        <TextView
            android:id="@+id/lesson_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Уровень А2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- Текст "Elementary" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lesson_title2"
            android:layout_alignLeft="@id/lesson_title2"
            android:text="Elementary"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#000000"/>
    </RelativeLayout>

    <!-- Третий блок -->
    <RelativeLayout
        android:id="@+id/text_text_i2"
        android:layout_width="327dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_gray_border"
        android:layout_below="@id/text_text_i1"
        android:layout_centerHorizontal="true">

        <!-- Иконка -->
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pencil_paper"/>

        <!-- Текст "Уровень B1" -->
        <TextView
            android:id="@+id/lesson_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon3"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Уровень B1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <!-- Текст "Intermediate" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lesson_title3"
            android:layout_alignLeft="@id/lesson_title3"
            android:text="Intermediate"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#000000"/>
    </RelativeLayout>

    <!-- Четвертый блок -->
    <RelativeLayout
        android:id="@+id/text_text_i3"
        android:layout_width="327dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_gray_border"
        android:layout_below="@id/text_text_i2"
        android:layout_centerHorizontal="true">

        <!-- Иконка -->
        <ImageView
            android:id="@+id/icon4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pencil_paper"/>

        <!-- Текст "Уровень B2" -->
        <TextView
            android:id="@+id/lesson_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon4"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Уровень B2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <!-- Текст "Upper Intermediate" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lesson_title4"
            android:layout_alignLeft="@id/lesson_title4"
            android:text="Upper Intermediate"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#000000"
            />
    </RelativeLayout>

    <!-- Пятый блок -->
    <RelativeLayout
        android:id="@+id/text_text_i4"
        android:layout_width="327dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_gray_border"
        android:layout_below="@id/text_text_i3"
        android:layout_centerHorizontal="true">

        <!-- Иконка -->
        <ImageView
            android:id="@+id/icon5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pencil_paper"/>

        <!-- Текст "Уровень C1" -->
        <TextView
            android:id="@+id/lesson_title5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon5"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Уровень C1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <!-- Текст "Advanced" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lesson_title5"
            android:layout_alignLeft="@id/lesson_title5"
            android:text="Advanced"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#000000"
            />
    </RelativeLayout>

    <!-- Шестый блок -->
    <RelativeLayout
        android:id="@+id/text_text_i5"
        android:layout_width="327dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_gray_border"
        android:layout_below="@id/text_text_i4"
        android:layout_centerHorizontal="true">

        <!-- Иконка -->
        <ImageView
            android:id="@+id/icon6"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pencil_paper"/>

        <!-- Текст "Уровень C2" -->
        <TextView
            android:id="@+id/lesson_title6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon6"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Уровень C2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <!-- Текст "Proficiency" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lesson_title6"
            android:layout_alignLeft="@id/lesson_title6"
            android:text="Proficiency"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#000000"
            />
    </RelativeLayout>
</RelativeLayout>