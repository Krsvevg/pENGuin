<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Логотип (центрирован по горизонтали, отступ сверху 220dp) -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="220dp" />

    <!-- Текстовый блок (центрирован, отступ сверху 40dp от логотипа) -->
    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pENGuin"
        android:textSize="36sp"
        android:textColor="#3A6AE2"
        android:textStyle="bold"
        android:letterSpacing="0.1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="40dp" />

    <!-- Нижний блок (выравнивание по низу экрана) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/big_primary"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:text="Начать"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

